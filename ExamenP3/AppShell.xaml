<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ExamenP3.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ExamenP3.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="ExamenP3 ">

    <TabBar>
        <ShellContent
            Title="Buscar Películas"
            ContentTemplate="{DataTemplate views:MovieSearchPage}"
            Route="MovieSearchPage" />
        <ShellContent
            Title="Películas Consultadas"
            ContentTemplate="{DataTemplate views:MoviesListPage}"
            Route="MoviesListPage" />
    </TabBar>
</Shell>
